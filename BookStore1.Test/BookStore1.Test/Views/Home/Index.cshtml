@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Book Stores</title>
</head>
<body>
<div>
    <h3>Book Sales</h3>
    <table>
        <tr>
            <td><p>Book name</p></td>
            <td><p>Autor</p></td>
            <td><p>Price</p></td><td></td>
        </tr>
        @foreach (var b in ViewBag.Books)
        {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Autor</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/Buy/@b.Id">Buy</a></p></td>
            </tr>
        }
    </table>

</div>
</body>
</html>